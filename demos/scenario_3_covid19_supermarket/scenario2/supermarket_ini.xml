<?xml version="1.0" encoding="UTF-8" ?>
<JuPedSim project="JPS-Project" version="0.7" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <header>
        <seed>linspace(1,15001,2)</seed>
        <max_sim_time>3600</max_sim_time>
        <geometry>../supermarket_geo.xml</geometry>
        <trajectories format="plain" fps="8" color_mode="contact">
            <file location="supermarket_traj.txt" />
			<optional_output covid="TRUE"/>
        </trajectories>
		<output path="trajectories" />
    </header>
	<routing>
		<goals>
			<goal id="0" final="true" captaion="final goal">
				<polygon>
					<vertex px="-3.0" py="6.0" />
					<vertex px="-3.0" py="12.0" />
					<vertex px="-4.0" py="12.0" />
					<vertex px="-4.0" py="6.0" />
					<vertex px="-3.0" py="6.0" />
				</polygon>
			</goal>
		</goals>
	</routing>
	
    <agents operational_model_id="3">
        <agents_distribution>
            <group group_id="0" agent_parameter_id="0" room_id="0" subroom_id="0" 
			number="0" goal_id="-1" router_id="1" covid_parameter_id="1" patience="2"/>
        </agents_distribution>
		
		<agents_sources>
            <source id="1" caption="customer" group_id="0" frequency="60" agents_max="100" time_min="0" N_create="10" percent="0.2" rate="10" x_min="-60" x_max="-58" y_min="16.5" y_max="17.5" />
        </agents_sources>
		
    </agents>
	
    <operational_models>
        <model operational_model_id="3" description="Tordeux2015">
            <model_parameters>
                <stepsize>0.01</stepsize>
				<!--_isCovid==1:confined room case, _iscovid==2: normal case-->
				<!--_isCovid==3: single ped case, _iscovid==4: practical case-->
				<!--isCovid==5: supermarket_case-->
				<covid>5</covid>
				<fType>1</fType>
                <exit_crossing_strategy>3</exit_crossing_strategy>
                <linkedcells enabled="true" cell_size="3" />
                <force_ped a="8" D="0.1" />
                <force_wall a="5" D="0.05" />
				<contact_para number="30" checkTimeRate="0.1" checkDisRate="0.003" socialDis="0" />
            </model_parameters>
            <agent_parameters agent_parameter_id="0">
				<v0 mu="1.34" sigma="0.26" />
                <bmax mu="0.20" sigma="0.00" />
                <bmin mu="0.20" sigma="0.00" />
                <amin mu="0.20" sigma="0.00" />
                <tau mu="0.5" sigma="0.00" />
                <atau mu="0.0" sigma="0.00" />
				<T mu="1" sigma="0.00" />
            </agent_parameters>
			<agent_parameters agent_parameter_id="1">
				<v0 mu="1.34" sigma="0.26" />
                <bmax mu="0.25" sigma="0.00" />
                <bmin mu="0.25" sigma="0.00" />
                <amin mu="0.40" sigma="0.00" />
                <tau mu="0.5" sigma="0.00" />
                <atau mu="0.0" sigma="0.00" />
				<T mu="1" sigma="0.00" />
            </agent_parameters>
			<covid_parameters covid_parameter_id="1">
				<infective>1</infective>
				<Model_param k="0.1" D="1.0" />
				<P mu="0.3" sigma="0.00" />
				<Q mu="0.3" sigma="0.00" />
				<alpha mu="1.0" sigma="0.00" />
				<stayTime mu="300" sigma="50"/>
			</covid_parameters>
			<covid_parameters covid_parameter_id="2">
				<infective>0</infective>
				<Model_param k="0.1" D="1.0" />
				<P mu="0.3" sigma="0.00" />
				<Q mu="0.3" sigma="0.00" />
				<alpha mu="1.0" sigma="0.00" />
			</covid_parameters>
        </model>
    </operational_models>
	
    <route_choice_models>
        <router router_id="1" description="global_shortest">
			<parameters>
				<navigation_lines file="../supermarket_routing.xml" />
			</parameters>
        </router>
    </route_choice_models>
</JuPedSim>
