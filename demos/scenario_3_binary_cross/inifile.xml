<JuPedSim xmlns:ns0="http://xsd.jupedsim.org/jps_ini_core.xsd" project="JPS-Project" version="0.8" ns0:noNamespaceSchemaLocation="ini.xsd">
  <seed>1</seed>
  <num_threads>8</num_threads>
  <max_sim_time unit="sec">20</max_sim_time>
  <logfile>log.txt</logfile>
  <geometry>geometry.xml</geometry>
  <trajectories color_mode="group" embed_mesh="false" format="xml-plain" fps="10">
    <file location="trajectory.xml" /> 
  </trajectories>
  <show_statistics>false</show_statistics>
  
  <routing>
	<goals>
		<goal caption="left" final="true" id="0">
			<polygon>
				<vertex px="-12" py="10" />
				<vertex px="-10" py="10" />
				<vertex px="-10" py="-10" />
				<vertex px="-12" py="-10" />
				<vertex px="-12" py="10" />
			</polygon>
		</goal>
		<goal caption="right" final="true" id="1">
			<polygon>
				<vertex px="12" py="10" />
				<vertex px="10" py="10" />
				<vertex px="10" py="-10" />
				<vertex px="12" py="-10" />
				<vertex px="12" py="10" />
			</polygon>
		</goal>
        <goal caption="up" final="true" id="2">
			<polygon>
				<vertex px="-10" py="10" />
				<vertex px="-10" py="12" />
				<vertex px="10" py="12" />
				<vertex px="10" py="10" />
				<vertex px="-10" py="10" />
			</polygon>
		</goal>
        <goal caption="bottom" final="true" id="3">
			<polygon>
				<vertex px="-10" py="-10" />
				<vertex px="-10" py="-12" />
				<vertex px="10" py="-12" />
				<vertex px="10" py="-10" />
				<vertex px="-10" py="-10" />
			</polygon>
		</goal>
	</goals>
  </routing>
  
  <agents operational_model_id="8">
    <agents_distribution>
		<group agent_parameter_id="2" goal_id="2" group_id="1" number="1" room_id="0" router_id="1" subroom_id="0" startX="0" startY="-2" />
		<group agent_parameter_id="1" goal_id="1" group_id="2" number="1" room_id="0" router_id="1" subroom_id="0" startX="-2" startY="0.0" />		
	</agents_distribution>
  </agents>
 
  <operational_models>
	<model description="avm" operational_model_id="8">
      <model_parameters>
        <solver>euler</solver>
        <stepsize>0.05</stepsize>
		<periodic>0</periodic>
        <exit_crossing_strategy>3</exit_crossing_strategy>
        <linkedcells cell_size="20" enabled="true" />
        <model_type using="2" />
        <force_ped D="0.1" a="3.0" />
        <force_wall D="0.05" a="6" />
		<GCVM Td="0.3" Ts="1.06" />
        <AVM AntiTime="1.0" ConstantAlpha="false"/>
      </model_parameters>
      <agent_parameters agent_parameter_id="1">
        <v0 mu="1" sigma="0.00" />
        <bmax mu="0.18" sigma="0.00000" /> 
        <bmin mu="0.18" sigma="0.00000" />
        <amin mu="0.18" sigma="0.00000" />
        <atau mu="0.0" sigma="0.00000" />
		<tau mu="0.0" sigma="0.000" />
      </agent_parameters>
	  <agent_parameters agent_parameter_id="2">
        <v0 mu="0.99" sigma="0" />
        <bmax mu="0.18" sigma="0.00000" /> 
        <bmin mu="0.18" sigma="0.00000" />
        <amin mu="0.18" sigma="0.00000" />
        <atau mu="0.0" sigma="0.00000" />
		<tau mu="0.0" sigma="0.000" />
      </agent_parameters>
	</model> 
  </operational_models>

  <route_choice_models>
    <router description="local_shortest" router_id="1">
      <parameters>
        
      </parameters>
    </router>
  </route_choice_models>

</JuPedSim>